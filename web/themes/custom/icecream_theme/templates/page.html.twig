<!DOCTYPE html>
<html lang="en" dir="ltr">
	<head>
		<meta charset="utf-8">
	</head>
	<body>
		<header class="header">
			{{ page.header }}
			<nav>
				<div class="logo flex">
					<img class="mr-2" style="width: 80px; border-radius: 50%" src="/themes/custom/xpaul_theme/assets/xpaul.png"/>
					<h2>Elegance...</h2>
				</div>
				<ul>
					<li><a href="#home">Home</a></li>
					<li><a href="#project">Project</a></li>
					<li><a href="#conatct">Contact</a></li>
				</ul>
			</nav>
			<br/>
			<div class="heading">
				<h1>Welcome to the Royalty Experience</h1>
			</div>
			<nav class="menu">
				{{ page.menu }}
			</nav>
		</header>
		<main class="main">
			<div class="content">
				{{ page.content }}
			</div>
			{% if page.sidebar %}
				<div class="sidebar"></div>
			{% endif %}
		</main>

		<footer class="footer">
			{{ page.footer }}
		</footer>
	</body>
</html>
